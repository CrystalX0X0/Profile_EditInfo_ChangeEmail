<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PocketProfile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PocketProfile">

    <!-- Main Profile Page (Visible in Flyout) -->
    <ShellContent
        Title="Profile"
        Route="ProfilePage"
        ContentTemplate="{DataTemplate local:ProfilePage}" />

    <!-- Hidden pages for navigation -->
    <ShellContent
        Route="EditInfoPage"
        ContentTemplate="{DataTemplate local:EditInfoPage}"
        IsVisible="False" />

    <ShellContent
        Route="VerifyPasswordPage"
        ContentTemplate="{DataTemplate local:VerifyPasswordPage}"
        IsVisible="False" />
    <ShellContent 
        Route="ChangeEmailPage"
        ContentTemplate="{DataTemplate local:ChangeEmailPage}"
        IsVisible="False" />


</Shell>
