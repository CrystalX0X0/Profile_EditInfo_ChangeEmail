<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PocketProfile.InviteBottomSheet"
    BackgroundColor="#1C1C1E"
    Padding="20"
    HeightRequest="400">

    <VerticalStackLayout VerticalOptions="EndAndExpand"
                         Spacing="20">
        <BoxView HeightRequest="5"
                 WidthRequest="50"
                 Color="Gray"
                 HorizontalOptions="Center"
                 CornerRadius="3" />

        <Label Text="Share your invite"
               FontSize="24"
               FontFamily="Roboto_SemiBold"
               TextColor="White"
               HorizontalOptions="Center" />

        <Button Text="Copy Link"
                BackgroundColor="#727272"
                TextColor="White"
                CornerRadius="12" />

        <Button Text="Share via..."
                BackgroundColor="#727272"
                TextColor="White"
                CornerRadius="12" />

        <Button Text="Cancel"
                BackgroundColor="Transparent"
                TextColor="Red"
                Clicked="OnCancelClicked" />
    </VerticalStackLayout>
</ContentPage>
